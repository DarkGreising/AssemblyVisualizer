<UserControl x:Class="ILSpyVisualizer.AssemblyBrowser.Screens.GraphScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:zoom="clr-namespace:WPFExtensions.Controls;assembly=WPFExtensions" 
             xmlns:AssemblyBrowser="clr-namespace:ILSpyVisualizer.AssemblyBrowser" 
             xmlns:Controls="clr-namespace:GraphSharp.Controls;assembly=GraphSharp.Controls" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Dictionaries\DataTemplatesDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type Controls:VertexControl}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Controls:VertexControl}">

                            <ContentPresenter Content="{TemplateBinding Vertex}" 
                                      ContentTemplate="{StaticResource TypeDataTemplate}"/>

                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <Popup PlacementTarget="{Binding ElementName=grdMain}"
               Placement="Relative" 
               HorizontalOffset="15"
               VerticalOffset="15"               
               DataContext="{Binding TypeForDetails}"
               StaysOpen="False"
               x:Name="detailsPopup"
               AllowsTransparency="True">
            <Grid Margin="0, 0, 6, 6">
                <Border Background="White"
                        BorderBrush="#555555"
                        BorderThickness="1"
                        CornerRadius="8">
                    <Grid Margin="8, 8, 8, 5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                    
                        <TextBlock Text="{Binding Name}"
                                   ToolTip="{Binding FullName}"
                                   FontSize="16"
                                   Foreground="#555555"
                                   Margin="0, 0, 0, 4"/>
                        
                        <ScrollViewer VerticalScrollBarVisibility="Auto"                                  
                                      Grid.Row="1">
                            <ItemsControl x:Name="icMembers"
                                          ItemsSource="{Binding Members}"
                                          Grid.Row="1" />
                        </ScrollViewer>
                    </Grid>
                    
                   
                </Border>
                <Border BorderBrush="#555555"
                        BorderThickness="1"
                        CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect/>
                    </Border.Effect>
                </Border>
            </Grid>
        </Popup>

        <zoom:ZoomControl x:Name="zoomControl"
                              Grid.Row="1"  
                              Zoom="0.2"
                              ZoomBoxOpacity="0.5">
            <AssemblyBrowser:TypeGraphLayout x:Name="graphLayout"                                             
                                             Margin="10"
                                             Graph="{Binding Graph}"
                                             LayoutAlgorithmType="LinLog"
                                             OverlapRemovalAlgorithmType="FSA"
                                             HighlightAlgorithmType="Simple" />
        </zoom:ZoomControl>

        <Border VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Background="White"
                CornerRadius="8"
                Margin="0, 0, 12, 8">
            <ItemsControl ItemsSource="{Binding Assemblies}"/>
        </Border>

        <Border VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="10"
                Background="White"
                CornerRadius="8">
            <TextBlock Text="{Binding Type.Name}"
                       ToolTip="{Binding Type.FullName}"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#555555"
                       Margin="4, 0"/>
        </Border>
    </Grid>
</UserControl>
